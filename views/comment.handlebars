    {{/each}}
{{/if}} --}}

<ul class="uk-grid-small  uk-child-width-1-1 uk-child-width-1-4@s" uk-sortable="handle: .uk-card" uk-grid
    style="padding-left: 5% !important; padding-right: 5% !important">

{{#if post.Comments}}
{{#each post.Comments}}
        <li>
            <div class="uk-card uk-card-default uk-card-body">
                <hr class="uk-divider-icon">
                <p style="word-wrap: break-word">{{commentBody}}</p>
                <hr>
            </div>
        </li>
    {{/each}}
{{/if}}
</ul>


