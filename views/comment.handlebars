

<div class="uk-text-center">
    <h1 style="text-decoration: underline; margin-top: 5%">{{post.title}}</h1>
    <p>{{post.body}}</p>
    <h6>{{post.createdAt}}</h6>
    <hr>
    {{!-- <p>{{>comment-details}}</p> --}}
</div>
    <form class="uk-text-center" style="margin-bottom: 50px">
        <input type="hidden" name="blog-id" value="{{post.id}}" />
        <input id="commentInput" />
        <button type="submit" id="comment">comment</button>
    </form>

{{!-- {{#if post.Comments}}
